<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2 pb-2 pt-2">Song Inventory Page</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/add" class="btn btn-sm btn-outline-success">+ New Song</a>
    </div>
  </div>
</div>

<div>
  <div class="container table-responsive pt-1">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Song Title</th>
          <th scope="col">Artist</th>
          <th scope="col">Genre</th>
          <th scope="col">Release Year</th>
          <th scope="col" class="text-end">Action</th>
        </tr>
      </thead>

      <tbody>
        <% songs.forEach(element=>{ %>
          <tr class="align-middle">
            <td><%= element.songTitle %></td>
            <td><%= element.artist %></td>
            <td><%= element.genre %></td>
            <td><%= element.releaseYear %></td>
            <!-- The following code creates action icons for view, edit and delete -->
            <td>
              <div class="d-flex flex-row justify-content-end gap-2">
                <a href="/view/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                  <i class="bi bi-eye"></i>
                </a>
                <a href="/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small">
                  <i class="bi bi-pencil"></i>
                </a>
                <form action="/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                  <button type="submit" class="btn btn-danger btn-small">
                    <i class="bi bi-person-x"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</div>