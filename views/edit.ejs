<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 mb-3 border-bottom">
  <h1 class="h2">Edit <%= song.songTitle %></h1>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Song Inventory Page</a></li>
          <li class="breadcrumb-item active"><%= song.songTitle %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter pt-1" style="font-size: 12px">
      <b>Last Updated <%= new Date(song.updatedAt).toUTCString() %></b>
    </div>
  </div>
</div>

<form action="/edit/<%= song._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="songTitle">Song Title</label>
      <input type="text" class="form-control" id="songTitle" name="songTitle" value="<%= song.songTitle %>" placeholder="Song Title" required>
    </div>

    <div class="col">
      <label for="artist">Artist</label>
      <input type="text" class="form-control" id="artist" name="artist" value="<%= song.artist %>" placeholder="Artist" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="genre">Genre</label>
      <input type="text" class="form-control" id="genre" name="genre" value="<%= song.genre %>" placeholder="Genre" required>
    </div>

    <div class="col">
      <label for="releaseYear">Release Year</label>
      <input type="number" class="form-control" id="releaseYear" name="releaseYear" value="<%= song.releaseYear %>" placeholder="Release Year" required>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Song</button>
    <button type="button" class="btn btn-danger mx-4" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Song</button>
  </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title"></div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the song record of <b class="fw-bold"><%= song.songTitle %> by <%= song.artist %></b><br>
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/edit/<%= song._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-danger">Yes, Remove Song</button>
        </form>
      </div>
    </div>
  </div>
</div>